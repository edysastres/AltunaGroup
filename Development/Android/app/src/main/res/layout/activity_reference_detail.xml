<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ReferenceDetailActivity">

    <TextView
            android:text="KWI-1D Cajita 1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtReferenceCode"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="16dp" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:textColor="@color/colorPrimary" android:textSize="18sp"/>
    <TextView
            android:text="$ 0.17"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtReferencePrice"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtReferenceCode" android:textColor="@color/colorPrimary"
            android:textStyle="bold" android:textSize="24sp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtReferenceDescription"
            app:layout_constraintTop_toBottomOf="@+id/txtReferencePrice" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:textSize="24sp"
            android:textStyle="bold"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp" app:srcCompat="@drawable/jma_key"
            android:id="@+id/imgReference"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            app:layout_constraintTop_toBottomOf="@+id/txtReferenceDescription" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txtMaterial" android:scaleType="centerCrop"/>
    <TextView
            android:text="Material: LatÃ³n"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtMaterial"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:textSize="24sp"
            android:textStyle="normal" app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintBottom_toTopOf="@+id/txtPackaging"/>
    <TextView
            android:text="Disponible en: Cajita 1, Bolsa Granel"
            android:layout_width="0dp"
            android:layout_height="wrap_content" android:id="@+id/txtPackaging"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:textSize="24sp"
            android:textStyle="normal" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>